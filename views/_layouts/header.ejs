<header>
  <!-- Fixed navbar -->
  <!-- <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark"> -->
  <nav class="navbar sticky-top navbar-expand-md navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Shopping Cart</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav me-auto mb-2 mb-md-0">
          <% pages.forEach(function(page){ %>
          <% if (page.slug == "home") { %>
          <li class="nav-item">
            <a class="nav-link active" href="/"><%= page.title %></a>
          </li>
            <% } else {%>
          <li class="nav-item">
            <a class="nav-link" href="/<%= page.slug %>"><%= page.title %></a>
          </li>
          <% } %>
          <% }); %>
        </ul>

        <ul class="navbar-nav navbar-right">

          <li class="nav-item">
            <a class="nav-link active" href="/cart/checkout"><img src="/images/addcart.png" alt="MyCart" width="30%"> (
                <% if (typeof cart !== "undefined") { %>
                <%= cart.length %>
                <% } else {%>
                0
                <% } %>
            )</a>
          </li>
            <% if (user) { %>
            <li class="nav-item"><a class="nav-link active" href="/users/logout">Hi, <%= user.username %> &nbsp;&nbsp;|&nbsp;&nbsp; logout</a></li>
            <% } else {%>
            <li class="nav-item"><a class="nav-link active" href="/users/register">Register</a></li>
            <li class="nav-item"><a class="nav-link active" href="/users/login">Log in</a></li>
            <% } %>
            <% if (user && user.admin == 1) { %>
            <li class="nav-item"><a class="nav-link active" href="/admin/pages"> &nbsp;&nbsp;|&nbsp;&nbsp;Admin Area</a></li>
            <% }%>
        </ul>

      </div>
    </div>
  </nav>
</header>
